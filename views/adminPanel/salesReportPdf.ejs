<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sales Report PDF</title>
    <style>
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f9;
        margin: 20px;
        padding: 20px;
        color: #333;
      }
      h1,
      h3 {
        text-align: center;
        color: #004466;
      }
      p {
        margin: 5px 0;
      }
      .summary {
        background-color: #e9f2f9;
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
      }
      table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
      }
      table,
      th,
      td {
        border: 1px solid #ddd;
      }
      th,
      td {
        padding: 12px;
        text-align: center;
      }
      th {
        background-color: #004466;
        color: #fff;
      }
      tr:nth-child(even) {
        background-color: #f2f2f2;
      }
    </style>
  </head>
  <body>
    <h1>Sales Report</h1>
    <p>Generated on: <%= new Date().toLocaleDateString() %></p>

    <div class="summary">
      <h3>Summary</h3>
      <p>Total Revenue: ₹<%= totalRevenue.toFixed(2) %></p>
      <p>Total Discount: ₹<%= totalDiscount.toFixed(2) %></p>
      <p>Total Refunds: ₹<%= totalRefund.toFixed(2) %></p>
      <p>Total Orders: <%= totalOrders %></p>
    </div>

    <h3>Order Details</h3>
    <table>
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Date</th>
          <th>Customer</th>
          <th>Items</th>
          <th>Amount</th>
          <th>Payment Type</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        <% orders.forEach(order => { %>
        <tr>
          <td><%= order._id %></td>
          <td><%= new Date(order.createdAt).toLocaleDateString() %></td>
          <td><%= order.user_id.name %></td>
          <td><%= order.order_items.length %></td>
          <td>₹<%= order.final_amount %></td>
          <td><%= order.payment_type %></td>
          <td><%= order.status %></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
