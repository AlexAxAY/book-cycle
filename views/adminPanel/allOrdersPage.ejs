<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Orders</title>

    <!-- css -->
    <link rel="stylesheet" href="/admin/stylesheets/allOrdersPage.css" />

    <!-- bootstrap -->
    <%- include("../partials/admin/bootLink.ejs") %>

    <!-- icon link -->
    <%- include("../partials/user/iconLink.ejs") %>
  </head>

  <body>
    <!-- sidebar -->
    <div class="col-3" style="width: 200px; position: fixed">
      <%- include("../partials/admin/adminNavbar.ejs") %>
    </div>

    <!-- error alert -->
    <div class="alert-bad d-none text-center" style="position: fixed"></div>
    <!-- success alert -->
    <div class="alert-good d-none text-center" style="position: fixed"></div>

    <!-- main section -->
<section class="container mt-5">
  <div
    class="d-flex"
    style="min-height: calc(100vh - 60px); margin-left: 210px; flex-direction: column; align-items: center;"
  >
    <h2>Orders</h2>

    <!-- Filter Section -->
    <div class="mb-3 mt-5">
      <button class="btn btn-primary filter-btn">Filters</button>
      <div
        id="filterSection"
        class="d-none mt-3 text-center d-flex justify-content-center"
      >
        <form
          action="/admin/all-orders"
          method="GET"
          class="d-flex flex-wrap align-items-center"
        >
          <!-- Status Filter -->
          <div class="form-group mx-2 d-flex align-items-center">
            <label for="statusFilter" class="mr-2"></label>
            <select name="status" id="statusFilter" class="form-control">
              <option value="all" <%= (!status || status === "all") ? "selected" : "" %>>All</option>
              <option value="Confirmed" <%= status === "Confirmed" ? "selected" : "" %>>Confirmed</option>
              <option value="Cancelled" <%= status === "Cancelled" ? "selected" : "" %>>Cancelled</option>
              <option value="In transit" <%= status === "In transit" ? "selected" : "" %>>In transit</option>
              <option value="Shipped" <%= status === "Shipped" ? "selected" : "" %>>Shipped</option>
              <option value="Delivered" <%= status === "Delivered" ? "selected" : "" %>>Delivered</option>
            </select>
          </div>
          <!-- Name Search -->
          <div class="form-group mx-2 d-flex align-items-center">
            <label for="nameSearch" class="mr-2"></label>
            <input
              type="text"
              name="name"
              id="nameSearch"
              class="form-control"
              style="border-radius: 20px"
              placeholder="Search for a user"
              value="<%= name %>"
            />
          </div>
          <!-- Submit Button -->
          <div class="form-group mx-2 d-flex align-items-center">
            <button
              type="submit"
              class="btn btn-outline-dark btn-sm search"
            >
              Search
            </button>
          </div>
        </form>
      </div>
    </div>

    <!-- User Table -->
     <% if (orders.length > 0) {%>
      <div class="table-responsive my-4">
        <table class="table table-striped table-hover table-bordered shadow-sm" style="max-width: 1200px; margin: auto; background: #fff;">
          <thead class="thead-dark">
            <tr>
              <th>Order Id</th>
              <th>Ordered Items</th>
              <th>Total Items</th>
              <th>Ordered by</th>
              <th>Current Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% orders.forEach(function(order) { %>
            <tr>
              <td>
                <span class="text-muted">(#<%= order._id %>)</span>
              </td>
              <td>
                <% order.order_items.forEach((item, index) => { %>
                  <%= item.product.name %><% if (index < order.order_items.length - 1) { %>, <% } %>
                <% }) %>
              </td>
              <td><%= order.total_items %></td>
              <td><%= order.user_id.name %></td>
              <td><%= order.status %></td>
              <td>
                <a href="/admin/order/<%= order._id %>">
                  <i style="color: skyblue" class="fa-solid fa-circle-info"></i>
                </a>
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
      </div>
    

    <!-- Pagination Controls -->
    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage == i ? 'active' : '' %>">
            <a
              class="page-link"
              href="/admin/all-orders?<% if(status && status !== 'all') { %>status=<%= status %>&<% } %><% if(name) { %>name=<%= name %>&<% } %>page=<%= i %>"
            >
              <%= i %>
            </a>
          </li>
        <% } %>
      </ul>
    </nav>
    <% } else  {%>
      <p class="text-center">No orders found</p>
    <% } %>
  </div>
</section>


    <!-- footer -->
    <%- include("../partials/admin/adminFooter.ejs") %>

    <!-- js logout validation file -->
    <script src="/admin/front-end-validation/logoutValidation.js"></script>

    <!-- filter toggler -->
    <script src="/admin/helper/allUserHelper.js"></script>

    <!-- bootstrap -->
    <%- include("../partials/admin/bootScript.ejs") %>

    <!-- axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </body>
</html>
