<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Order summary</title>
  </head>
  <!-- bootstrap -->
  <%- include("../partials/admin/bootLink.ejs") %>

  <!-- icon link -->
  <%- include("../partials/user/iconLink.ejs") %>

  <!-- css -->
  <link rel="stylesheet" href="/user/stylesheets/orderSummary.css" />
  <body>
    <!-- navbar -->
    <header><%- include("../partials/user/userNavbar.ejs") %></header>

    <!-- alert -->
    <%- include("../partials/user/alertMessage.ejs") %>

    <div class="container mt-4" style="min-height: calc(100vh - 212px)">
      <h1>Order Summary</h1>
      <div class="row my-5">
        <!-- Left Column -->
        <div class="col-lg-8">
          <div class="card p-4">
            <% order.order_items.forEach((item) => { %>
              <div class="d-flex justify-content-between">
                <div>
                  <h5 class="m-0">
                    <%= item.products.name %> (<%= item.quantity %>)
                  </h5>
                  <p class="m-0 text-muted">
                    <small>by <%= item.products.author %></small>
                  </p>
                  <p class="mb-2 text-muted">
                    <small><%= item.products.category %></small>
                  </p>
                  <h6>‚Çπ<%= item.products.price %></h6>
                  
                  <% if (order.status === "Delivered") { %>
                    <% if (!ratedProducts[item.products._id.toString()]) { %>
                      <hr>
                      <p class="mt-3 mb-0">Rate the product</p>
                      <div class="rating">
                        <% for (let i = 1; i <= 5; i++) { %>
                          <a href="/user/review/<%= item.products._id %>?order_id=<%= order._id %>&rating=<%= i %>">
                            <i class="fas fa-star"></i>
                          </a>
                        <% } %>
                      </div>
                    <% } else { %>
                      <p class="mb-0 mt-3">
                        <small style="color: green;">Thank you for rating!</small>üëç
                      </p>
                    <% } %>
                  <% } %>
                  
                </div>
                <img
                  style="max-width: 70px; max-height: 107px;"
                  src="<%= item.products.images[0].cropped_url || item.products.images[0].original_url %>"
                  alt="Book Cover"
                />
              </div>
              <hr />
            <% }); %>
            
            
            <div class="row">
              <div class="col">
                <div class="order-status">
                  <p>
                    <i class="fas fa-check-circle"></i>
                    <strong>Ordered:</strong> <%= orderCreated %>
                  </p>
                  <% if (order.status === "Delivered") {%>
                  <p>
                    <i class="fas fa-check-circle"></i>
                    <strong>Delivered:</strong> <%= orderDelivered %>
                  </p>
                  <% } %>
                </div>
                <a
                  class="text-primary"
                  style="cursor: pointer"
                  data-bs-toggle="modal"
                  data-bs-target="#deliveryModal"
                >
                  See All Details
                </a>
              </div>
              <div class="col text-end">
                <% if (order.status === "Confirmed" || order.status === "In transit") { %>
                  <button id="openCancelModal" class="btn btn-danger">Cancel order</button>
                <% } %>
                <% if (order.status === "Cancelled") {%>
                   <p class="text-danger">Order cancelled</p>
                <% } %>
                <% if (order.status === "Cancelled" && cancel.user_id.isAdmin) {%>
                    <p><%= cancel.reason %></p>
                <% } %>
              </div>
            </div>

            <!-- Cancel Order Modal (hidden by default) -->
            <div
              id="cancelModal"
              class="modal"
              style="
                display: none;
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0, 0, 0, 0.5);
              "
            >
              <div
                class="modal-content"
                style="
                  max-width: 500px;
                  margin: 15% auto;
                  padding: 20px;
                  background: #fff;
                  position: relative;
                "
              >
                <span
                  id="closeModal"
                  style="
                    position: absolute;
                    right: 10px;
                    top: 10px;
                    cursor: pointer;
                  "
                >
                  &times;
                </span>
                <h3>Cancel Order</h3>
                <p>Please provide a reason for cancellation:</p>
                <textarea
                  id="cancelReason"
                  rows="3"
                  style="width: 100%"
                  placeholder="Reason for cancellation (optional)"
                ></textarea>
                <button
                  id="confirmCancelBtn"
                  class="btn btn-danger"
                  style="margin-top: 10px"
                >
                  Confirm Cancellation
                </button>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column -->
        <div class="col-lg-4">
          <div class="invoice-btn mb-3">
            <i class="fas fa-file-download"></i>
            Download Invoice
          </div>
          <div class="card p-3 mb-3">
            <h6 class="text-muted">Shipping details</h6>
            <h5><%= order.address.name %></h5>
            <p>
              <%= order.address.address_line %><% if (order.address.landmark) {
              %>, <%= order.address.landmark %> <% } %>, <%= order.address.city
              %>, <%= order.address.state %> - <%= order.address.pincode %>
            </p>

            <p>
              <strong>Phone number:</strong>
              <%= order.address.phone %><% if (order.address.alt_phone) {%>, <%=
              order.address.alt_phone %> <% } %>
            </p>
          </div>
          <div class="card p-3">
            <h6 class="text-muted">Price details</h6>
            <div class="row">
              <div class="col-6 text-start">
                <p>Selling price (<%= order.total_items %> items)</p>
                <p>Discount</p>
                <p>Price after discount</p>
                <p>Delivery charge</p>
              </div>
              <div class="col-6 text-end">
                <p>‚Çπ<%= order.selling_price %></p>
                <p class="text-success">
                  ‚Çπ<%= order.total_discount.toFixed(2) %>
                </p>
                <p>‚Çπ <%= order.total_selling_price %></p>
                <p class="text-success">‚Çπ<%= order.delivery_charge %></p>
              </div>
            </div>

            <hr />
            <div class="row">
              <div class="col-6"><h5>Total Amount</h5></div>
              <div class="col-6 text-end">
                <h5>‚Çπ<%= order.final_amount %></h5>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

<!-- Modal -->
<div class="modal fade" id="deliveryModal" tabindex="-1" aria-labelledby="deliveryModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="deliveryModalLabel">Delivery Status</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <ul class="timeline list-unstyled">
          <!-- Order Confirmed -->
          <li class="mb-3">
            <i style="color: green" class="fas fa-check-circle me-2"></i>
            <strong>Order confirmed</strong>
            <br />
            <small class="text-muted"><%= orderCreated %></small>
          </li>
          
          <% if(order.status === "Cancelled") { %>
            <!-- Cancelled -->
            <li class="mb-3">
              <i style="color: red;" class="fa-solid fa-circle-xmark me-2"></i>
              <strong>Cancelled</strong>
              <br />
              <small class="text-muted"><%= orderCancelled %></small>
            </li>
          <% } else { %>
            <!-- In transit -->
            <li class="mb-3">
              <% if(order.inTransitAt) { %>
                <i style="color: green" class="fas fa-check-circle me-2"></i>
                <strong>In transit</strong>
                <br />
                <small class="text-muted">
                  <%= orderInTransit %>
                </small>
              <% } else { %>
                <i class="fa-regular fa-circle me-2"></i>
                <strong>In transit</strong>
              <% } %>
            </li>
            <!-- Shipped -->
            <li class="mb-3">
              <% if(order.shippedAt) { %>
                <i style="color: green" class="fas fa-check-circle me-2"></i>
                <strong>Shipped</strong>
                <br />
                <small class="text-muted">
                  <%= orderShipped %>
                </small>
              <% } else { %>
                <i class="fa-regular fa-circle me-2"></i>
                <strong>Shipped</strong>
              <% } %>
            </li>
            <!-- Delivered -->
            <li class="mb-3">
              <% if(order.deliveredAt) { %>
                <i style="color: green" class="fas fa-check-circle me-2"></i>
                <strong>Delivered</strong>
                <br />
                <small class="text-muted">
                  <%= orderDelivered %>
                </small>
              <% } else { %>
                <i class="fa-regular fa-circle me-2"></i>
                <strong>Delivered</strong>
              <% } %>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</div>



    <!-- footer partial -->
    <footer><%- include("../partials/user/userFooter.ejs") %></footer>

    <!-- logout -->
    <script src="/user/helper/logoutHelper.js"></script>

    <!-- pending user clear -->
    <script src="/user/helper/removePendingUser.js"></script>

    <!-- cancel order helper -->
    <script src="/user/helper/cancelOrderHelper.js"></script>

    <!-- Include Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <!-- bootstrap -->
    <%- include("../partials/admin/bootScript.ejs") %>
  </body>
</html>
