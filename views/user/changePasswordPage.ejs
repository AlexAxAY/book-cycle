<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Change password</title>

    <!-- css -->
    <link rel="stylesheet" href="/user/stylesheets/changePasswordPage.css" />

    <!-- icon link -->
    <%- include("../partials/user/iconLink.ejs") %>

    <!-- bootstrap link -->
    <%- include("../partials/admin/bootLink.ejs") %>
  </head>
  <body>
    <!-- navbar -->
    <header><%- include("../partials/user/userNavbar.ejs") %></header>

    <!-- alert -->
    <%- include("../partials/user/alertMessage.ejs") %>

    <!-- main section -->
    <section
      class="container main-one"
      style="
        min-height: calc(100vh - 212px);
        justify-content: center;
        align-items: center;
        display: flex;
        flex-direction: column;
      "
    >
      <h4>Change password</h4>
      <form class="text-center mt-5">
        <div class="mb-3">
          <label for="currentPassword" class="form-label"></label>
            Current Password
          </label>
          <input
            type="password"
            class="form-control"
            id="currentPassword"
            name="currentPassword"
          />
        </div>
        <div class="mb-3">
          <label for="newPassword" class="form-label">New Password</label>
          <input
            type="password"
            class="form-control"
            id="newPassword"
            name="newPassword"
          />
          <span id="passwordHelpInline" class="form-text">
            Must be at least 10 characters long
          </span>
        </div>
        <div class="mb-3">
          <label for="confirmNewPasword" class="form-label">
            Confirm New Password
          </label>
          <input
            type="password"
            class="form-control"
            id="confirmNewPasword"
            name="confirmNewPasword"
          />
        </div>

        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </section>

    <!-- footer partial -->
    <%- include("../partials/user/userFooter.ejs") %>

    <!-- include Axios -->
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>

    <!-- logout -->
    <script src="/user/helper/logoutHelper.js"></script>

    <!-- change password validation -->
    <script src="/user/validation/changePassValidation.js"></script>

    <!-- pending user clear -->
    <script src="/user/helper/removePendingUser.js"></script>

    <!-- bootstrap -->
    <%- include("../partials/admin/bootScript.ejs") %>
  </body>
</html>
